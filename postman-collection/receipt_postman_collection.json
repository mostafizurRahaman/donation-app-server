{
  "info": {
    "name": "Crescent Change â€“ Receipt APIs",
    "_postman_id": "9f2b4c77-7f66-4f13-9e77-ccba1b7d1001",
    "description": "Postman collection for Receipt module APIs in Crescent Change backend.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Generate Receipt",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"donationId\": \"{{donationId}}\",\n  \"donorId\": \"{{donorId}}\",\n  \"organizationId\": \"{{organizationId}}\",\n  \"causeId\": \"{{causeId}}\",\n  \"amount\": 100,\n  \"currency\": \"USD\",\n  \"donationType\": \"one-time\",\n  \"donationDate\": \"2024-11-25T00:00:00Z\",\n  \"paymentMethod\": \"credit_card\",\n  \"specialMessage\": \"Thank you for supporting our mission!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/receipts/generate",
          "host": ["{{baseUrl}}"],
          "path": ["api", "receipts", "generate"]
        }
      }
    },
    {
      "name": "Get Receipt by ID",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/receipts/{{receiptId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "receipts", "{{receiptId}}"]
        }
      }
    },
    {
      "name": "Get Receipts by Donor",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/receipts/donor/{{donorId}}?page=1&limit=10&sortBy=createdAt&sortOrder=desc",
          "host": ["{{baseUrl}}"],
          "path": ["api", "receipts", "donor", "{{donorId}}"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "10" },
            { "key": "sortBy", "value": "createdAt" },
            { "key": "sortOrder", "value": "desc" }
          ]
        }
      }
    },
    {
      "name": "Get Receipts by Organization",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/receipts/organization/{{organizationId}}?page=1&limit=10&sortBy=createdAt&sortOrder=desc",
          "host": ["{{baseUrl}}"],
          "path": ["api", "receipts", "organization", "{{organizationId}}"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "10" },
            { "key": "sortBy", "value": "createdAt" },
            { "key": "sortOrder", "value": "desc" }
          ]
        }
      }
    },
    {
      "name": "Resend Receipt Email",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/receipts/{{receiptId}}/resend-email",
          "host": ["{{baseUrl}}"],
          "path": ["api", "receipts", "{{receiptId}}", "resend-email"]
        }
      }
    },
    {
      "name": "Download Receipt",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/receipts/{{receiptId}}/download",
          "host": ["{{baseUrl}}"],
          "path": ["api", "receipts", "{{receiptId}}", "download"]
        }
      }
    },
    {
      "name": "Regenerate Receipt URL",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/receipts/{{receiptId}}/regenerate-url",
          "host": ["{{baseUrl}}"],
          "path": ["api", "receipts", "{{receiptId}}", "regenerate-url"]
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "token", "value": "" },
    { "key": "donationId", "value": "" },
    { "key": "donorId", "value": "" },
    { "key": "organizationId", "value": "" },
    { "key": "receiptId", "value": "" },
    { "key": "causeId", "value": "" }
  ]
}
